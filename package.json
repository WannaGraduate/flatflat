{
	"name": "file-tag-system",
	"displayName": "File Tag System",
	"description": "Manage Files with Tag System",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onView:queries",
        "onView:files"
	],
	"main": "./out/extension.js",
	"contributes": {
        "viewsContainers": {
			"activitybar": [
				{
					"id": "file-tag-system",
					"title": "File Tag System",
					"icon": "resources/dep.svg"
				}
			]
        },
        "views": {
			"file-tag-system": [
                {
                    "id": "queries",
                    "name": "Queries"
                },
                {
                    "id": "files",
                    "name": "Files"
                }
            ]
        },
		"commands": [
			{
				"command": "files.openFile",
				"title": "File Tag System: Open File"
            },
            {
                "command": "queries.addGroup",
                "title": "File Tag System: Add Group to Query",
                "icon": {
                    "dark": "resources/add.svg",
                    "light": "resources/add.svg"
                }
            },
            {
                "command": "Convert",
                "title": "Convert"
            },
            {
                "command": "Reset",
                "title": "File Tag System: Reset Tag Groups in the Queries",
                "icon": {
                    "dark": "resources/refresh.svg",
                    "light": "resources/refresh.svg"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "queries.addGroup",
                    "when": "view == queries",
                    "group": "navigation"
                },
                {
                    "command": "Reset",
                    "when": "view == queries",
                    "group": "navigation"
                },
                {
                    "command": "Convert",
                    "when": "view == queries",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": {
            "command": "queries.addGroup",
            "key": "ctrl+e",
            "mac": "cmd+e"
        }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.44.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
